class paysage(object):
    def __add__(self, taille):
        self.taille= taille
        self.terrain= [[0]*(2**taille+1)]*(2**taille+1)
    def creerpoint(self,i,j,ecart):
        self.terrain[i][j]= self.bruit(i,j,k)+((self.terrain[i+ecart][j+ecart]+self.terrain[i+ecart][j-ecart]+self.terrain[i-ecart][j+ecart]+self.terrain[i-ecart][j-ecart])/4)
    def generer(self):
        for k in range(1,self.taille):
            ecart = 2**(self.taille-k)
            for i in range(0,2**k-1)
